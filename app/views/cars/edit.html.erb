<h1>Edit Car:</h1>
<%= form_tag "/cars/#{@car.id}", method: :patch do %>
  <div class="form-group">
   <%= label_tag :name %>
    <%= text_field_tag :name, @car.name, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :price  %>
    <%= text_field_tag :price, @car.price, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :description  %>
    <%= text_field_tag :description, @car.description, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= label_tag :image  %>
    <%= text_field_tag :image, @car.image, class: "form-control"  %>
  </div>
  <%= submit_tag "Update car", class: "btn btn-default" %>
<% end %>